/*
블럭 끼워 맞추는 경우 생각해보기
f(n)=f(n-1)+f(n-2)*4+f(n-3)*2
*/
#include <bits/stdc++.h>
#define ll long long
#define endl "\n"
#define div 100007

using namespace std;

vector <ll> dp(100001);

ll f(ll n){
    if(dp[n]!=0) return dp[n];
    
    return dp[n]=(f(n-1)+f(n-2)*4+f(n-3)*2)%div;
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    ll n;
    cin>>n;
    dp[1]=1;
    dp[2]=5;
    dp[3]=11;
    cout<<f(n);

    return 0;
}
