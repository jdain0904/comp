#include <bits/stdc++.h>

#define ll long long
#define endl "\n"

using namespace std;

ll dp[100001];

ll f(ll n)
{
    if(dp[n]!=0) return dp[n];

    dp[n]=2*f(n-1)+3*f(n-2);

    for(ll i=0; i<n-2; i++)
    {
        dp[n]+=f(i)*2;
        dp[n]%=100007;
    }
    dp[n]=dp[n]%100007;
   return dp[n];
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);


    ll n;
    cin>>n;
    dp[0]=1;
    dp[1]=2;
    dp[2]=7;
    cout<<f(n)%100007;

    return 0;
}
