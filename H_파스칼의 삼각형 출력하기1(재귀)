/*
단순 파스칼 : f(n, k)=f(n-1, k-1)+f(n-1, k)
*/

#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll f(ll n, ll k){
    if(n==1) return 1;
    if(k==1 || k==n) return 1;

    return f(n-1, k-1)+f(n-1, k);
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    ll n, k;
    cin>>n>>k;
    cout<<f(n, k);
    
    return 0;
}
