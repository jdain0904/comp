/*
1. 기준점 설정(그색 고르기)
f(n-3, k-1)
2. 처음으로 색 나오는 위치 선정
f(n-i-1, k-1)
백트래킹 잘 하기기
*/
#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll f(ll n, ll k){
    if(k==0) return 1;
    if(n<=0) return 0;
    if(n<k*2-1) return 0;
    ll sum=0;
    for(ll i=1; i<=n; i++){
        sum+=f(n-1-i, k-1);
    }
    return sum;

}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    ll n, k;
    cin>>n>>k;
    cout<<f(n-3, k-1)*n/k;
    
    return 0;
}
