/*
앞에서부터 stack에 수 넣는데, 수가 strictly decrease하게 함
==monotone stack
*/
#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll n;
ll mx=0, idx;
stack <ll> stk;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    
    cin>>n;
   for(ll i=1; i<=n; i++){
        ll temp;
        cin>>temp;
        while(!stk.empty()&&stk.top()<=temp) stk.pop();
        if(mx<stk.size()){
            mx=stk.size();
            idx=i;
        }
        stk.push(temp);
    }

    cout<<idx<<' '<<mx;

    return 0;
}
