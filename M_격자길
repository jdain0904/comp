/*
f(y, x)=f(y, x-1)+f(y-1, x), 범위 넘거나 (n-y)/(m-x)>n/m이면 x
격자는 실제보다 1씩 더 크다.
double은쓰지말고, 그냥 넘겨서 (n-y)*m>(m-x)*y로 푸는게좋다
0base로
시간걸려서 dp써야함
*/
#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll n, m;

vector<vector<ll>> dp(20, vector<ll>(20, -1));

ll f(ll y, ll x){
    if(dp[y][x]!=-1) return dp[y][x];
    if((m-x)*n<(n-y)*m) return 0;
    if(x==0||y==0) return 1;

    return dp[y][x]=f(y-1, x)+f(y, x-1);
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    cin>>n>>m;

   
    cout<<f(n, m);
    
    return 0;
}
