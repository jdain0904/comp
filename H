#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll n;
ll ans=1;
ll calc[300001];
vector <ll> v[300001];

ll f(ll num){
    if(calc[num]!=0) return calc[num];
    if(num==0) return calc[0]=1;
    if(num==1) return calc[1]=1;
    return calc[num]=(num*f(num-1))%998244353;
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    cin>>n;

    for(ll i=0; i<n-1; i++){
        ll u, t;
        cin>>u>>t;
        v[u].push_back(t);
        v[t].push_back(u);
    }

    ans=f(v[1].size());
    for(ll i=2; i<=n; i++){
        ll cnt=v[i].size()-1;
        ans*=f(cnt);
        ans%=998244353;
    }

    cout<<ans;
    
    return 0;
}
