//f(현재위치, 이전이동) 
\\for(1~3, 이전이동과 같으면 continue)해서 이동재귀 돌리기
#include <bits/stdc++.h>
#define ll long long
#define endl "\n"

using namespace std;

ll n, cnt;

void f(ll num, ll past){
    if(num>n) return;
    if(num==n) cnt++;

    for(ll i=1; i<=3; i++) {
        if(past==i) continue;
        f(num+i, i);
    }
}

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

     cin>>n;
     f(0, 0);
     f(2, 0);
     cout<<cnt;
    
    return 0;
}
