
#include <bits/stdc++.h>

#define ll long long
#define endl "\n"

using namespace std;

ll n, m, k;
ll dep;

int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    ll left=1, sz=0;
    cin>>n>>m>>k;
     queue <ll> q;
     q.push(0);

    while(!q.empty())
    {
        dep=q.front()+1;
        q.pop();
        if(n>0)
        {
            q.push(dep);
            q.push(dep);
            n--;
        }
        else if(m>0)
        {
            q.push(dep);
            m--;
        }
        else k--;
    }

    if(k!=0) cout<<"impossible.";
    else cout<<dep-1;

    return 0;
}
